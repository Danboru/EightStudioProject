<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/latarUtama"
    android:orientation="vertical"
    tools:context="com.example.danboru.eightstudioproject.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/latarView"
        ></LinearLayout>

    <LinearLayout
        style="@style/normalStyle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/latarView"
        ></LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        >

        <Button
            style="@style/tampilanTombolSatu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/built"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            />

    </LinearLayout>

</LinearLayout>
